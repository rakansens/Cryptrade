{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": false,
    "incremental": false,
    "tsBuildInfoFile": null
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib/mastra/mastra-v2.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "coverage/**/*",
    ".next/**/*",
    "out/**/*"
  ]
}